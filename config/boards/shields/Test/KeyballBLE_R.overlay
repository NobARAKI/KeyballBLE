#include <dt-bindings/zmk/matrix_transform.h>
#include "KeyballBLE.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

&kscan0 {
    col-gpios
        = <&xiao_d 10 GPIO_ACTIVE_HIGH>
        , <&xiao_d 9 GPIO_ACTIVE_HIGH>
        , <&xiao_d 8 GPIO_ACTIVE_HIGH>
        , <&xiao_d 7 GPIO_ACTIVE_HIGH>
        , <&gpio0 10 GPIO_ACTIVE_HIGH>
        ;
};

// Keyball用にSPIピンを D4, D5 に変更する設定
&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,   // D5
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,  // D4
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;  // D4 (未使用だが定義)
        };
    };

    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
            low-power-enable;
        };
    };
};

// SPIの設定
&xiao_spi {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";

    // CSピンは元の定義 (P0.09) に戻す
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;

        // ドライバ仕様に合わせて irq-gpios に修正
        irq-gpios = <&xiao_d 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;

        // Input Subsystem用のマッピング
        zephyr,axis-x = <INPUT_REL_X>;
        zephyr,axis-y = <INPUT_REL_Y>;
    };
};

// ZMK Input Listenerの設定
/ {
    trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;

        // 必要に応じて感度調整などを行う場合はここに追記
        // xy-swap;
        // y-invert;
        // x-invert;
    };
};

&default_transform {
    col-offset = <6>;
};