#include <dt-bindings/zmk/matrix_transform.h>
#include "KeyballBLE.dtsi"

&xiao_spi {
    status = "okay";
    cs-gpios = <&xiao_d 7 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        /* 新しいドライバ仕様でも irq-gpios を使用します */
        irq-gpios = <&xiao_d 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        
        /* * 注意: 古いドライバにあった snipe-layers, scroll-layers 等の機能は
         * overlayではなく、keymapファイル側で設定する仕様に変わりました。
         * そのため、ここでは記述しません。
         */
    };
};

/* 重要: トラックボールの入力をZMKに伝えるための設定を追加 */
/ {
    trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;
    };
};

&default_transform {
    col-offset = <5>;
};